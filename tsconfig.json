{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5", // Don't change or else it will break things
    "jsx": "react",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*", "test/renderer/components/App.spec.tsx",
  ],
  "exclude": [
    "test/**/*"
  ]
}