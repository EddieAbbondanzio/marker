{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "jsx": "react",
    "noUnusedLocals": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "strictNullChecks": true,
  },
  "include": ["src", "webpack.config.js"],
  "exclude": ["test", "dist", "out", "node_modules"]
}